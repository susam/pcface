      "PC_FACE_OLDSCHOOL_VGA_9X14_FONT_MAP",
      "PC_FACE_OLDSCHOOL_VGA_8X16_FONT_LIST",
      "PC_FACE_OLDSCHOOL_VGA_8X16_FONT_MAP",
      "PC_FACE_OLDSCHOOL_PGC_8X16_FONT_LIST",
      "PC_FACE_OLDSCHOOL_PGC_8X16_FONT_MAP",
